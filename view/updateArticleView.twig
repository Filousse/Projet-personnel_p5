{% extends "template.twig" %}
{% block head %}<title>Modifier le jardin</title>{% endblock %}

{% block content %}
<br><br>
<h1> Vous modifier le jardin: <br>{{ post.title }}</h1>
<br><br>
<button class="btn btn-success col-sm-3 col-sm-offset-7 col-lg-2 col-lg-offset-9"><a class="text-white" href="index.php?action=dashboard"> Tableau de bord</a></button>
<br><br><br>
<div class="container">
      <form action="index.php?action=update&amp;id={{ post.id }}" method="post"><br><br>
        <div class="row">
          <!-- NAME GARDEN -->
          <div class="col-lg-6">
            <label for="nomDuJardin">Noms de votre jardin communautaire:</label><br>
            <input type="text" class="form-control" id="author" name="title" value="{{ post.title }}">
          </div>
            <!-- EMAIL -->
            <div class="col-lg-6">
              <label for="email">Email de l'administrateur du jardin:</label>
              <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com" name='email' value="{{ post.email }}">
            </div>
        </div><br>
        <!-- DESCRIPTION GARDEN -->
        <div class="form-group">
            <label for="comment">Description du jardin et son projet:</label><br>
            <textarea rows="20" name="text">{{ post.content }}</textarea>
        </div>
        <!-- ADRESSE GARDEN -->
        <div class="row">
          <div class="col-lg-6">
            <label for="rue">Adresse du jardin:</label>
            <input type="text" class="form-control" id="author" name="adress" value="{{ post.adress_street }}">
          </div>
          <div class="col-lg-6">
            <label for="rue">Ville:</label>
            <input type="text" class="form-control" id="author" name="city" value="{{ post.adress_city }}">
          </div>
        </div><br>
        <!-- SUBMIT -->
        <div>
          <input type="submit" class="btn-lg btn-success"/>
        </div><br>
      </form>
</div>
{% endblock %}
