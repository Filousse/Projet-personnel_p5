{% extends "template.twig" %}
{% block head %}<title>Blog</title>{% endblock %}

{% block content %}
<br><br><br><br>
<div class="container">
        <h1 class="well bg-success">
          {{ post.title }}<br>
          Adresse: {{ post.adress_street }}, {{ post.adress_city }}
        </h1>
        <p>
          {{ post.content | raw}} <em> le {{ post.creation_date_fr }}</em>
        </p>
        <h1>Contact de l'administrateur: <br/>{{ post.email }}</h1>
        <button class="btn btn-success btn-lg" type="button" ></span><a class="text-white" href="index.php?action=blog">  Retour Ã  la liste des jardins</a></button><br><br>
</div>

<h1>Ecrivez un commentaire:</h1>
<div class="container">
<form action="index.php?action=addComment&amp;id={{ post.id }}" method="post"><br>
        <label for="author">Auteur du commentaire:</label><br />
        <input type="text" class="form-control" id="author" name="author" /><br>
        <label for="comment">Commentaire:</label><br />
        <textarea id="comment"class="form-control" name="comment"></textarea><br>
        <input type="submit" class="col-sm-2 btn btn btn-success"/>
</form><br><br>
</div>

<h1>Liste des commentaires:</h1>
    {% for comment in comments %}
    <br>
    <div class="container">
        <h1 class="well">
        <strong>{{ comment.author }}</strong>
        </h1>
        {% autoescape %}
        <p>{{ comment.comment | raw }}</p>
        {% endautoescape %}
        <div class="col-lg-12 col-lg-offset-5">
        {{ comment_date_fr }}
        </div>
        <button type="submit" class="col-sm-3 btn btn btn-warning"><span class="glyphicon glyphicon-alert"></span><a class= "text-white" href="index.php?action=signaler&amp;id={{ comment.id }}&amp;post_id={{ comment.post_id }}"> SIGNALER </a></button><br><br>
        <br>
    </div>
    {% endfor %}
{% endblock %}
